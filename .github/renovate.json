{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":preserveSemverRanges"
  ],
  "timezone": "Europe/Vienna",
  "schedule": [
    "every weekend"
  ],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "rebaseWhen": "conflicted",
  "platformAutomerge": false,
  "nix": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": ["nix"],
      "matchPackageNames": ["/nixpkgs/"],
      "groupName": "nixpkgs",
      "schedule": ["every weekend"],
      "minimumReleaseAge": "3 days",
      "prPriority": 10
    },
    {
      "matchManagers": ["nix"],
      "matchPackageNames": ["/home-manager/"],
      "groupName": "home-manager",
      "schedule": ["every weekend"],
      "minimumReleaseAge": "1 day",
      "prPriority": 8
    },
    {
      "matchManagers": ["nix"],
      "matchPackageNames": ["/nix-darwin/"],
      "groupName": "nix-darwin",
      "schedule": ["every weekend"],
      "minimumReleaseAge": "1 day",
      "prPriority": 8
    },
    {
      "matchManagers": ["nix"],
      "matchPackageNames": ["/homebrew/"],
      "groupName": "homebrew",
      "schedule": ["every weekend"],
      "minimumReleaseAge": "1 day",
      "prPriority": 5
    },
    {
      "matchManagers": ["nix"],
      "matchPackageNames": ["/nixvim/", "/nix-index-database/", "/mac-app-util/", "/sops-nix/", "/nix-homebrew/"],
      "groupName": "nix ecosystem tools",
      "schedule": ["every weekend"],
      "minimumReleaseAge": "1 day",
      "prPriority": 6
    },
    {
      "matchUpdateTypes": ["major"],
      "addLabels": ["major-update"],
      "prPriority": -10,
      "schedule": ["every weekend"],
      "minimumReleaseAge": "7 days"
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "addLabels": ["minor-update"],
      "prPriority": 5,
      "schedule": ["every weekend"],
      "minimumReleaseAge": "1 day"
    },
    {
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "schedule": ["every weekend"],
      "minimumReleaseAge": "2 days",
      "prPriority": 7,
      "addLabels": ["github-actions"]
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am every weekend"]
  },
  "labels": ["dependencies"],
  "assignees": ["singhmanavjot"],
  "reviewers": ["singhmanavjot"],
  "commitMessagePrefix": "chore(deps):",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newValue}}",
  "prBodyTemplate": "This PR updates {{depName}} from `{{currentValue}}` to `{{newValue}}`.\n\n### Changes\n{{#if hasReleaseNotes}}\n{{{releaseNotes}}}\n{{/if}}\n\n### Validation\n- [ ] Nix flake check passes\n- [ ] Darwin build succeeds\n- [ ] No breaking changes detected\n\n---\n\n**Auto-generated by Renovate Bot**",
  "ignorePaths": [
    "**/node_modules/**",
    "**/vendor/**"
  ]
}
